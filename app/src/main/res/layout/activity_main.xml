<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ikefluxa.stufflogger.MainActivity"
    android:id="@+id/constraintLayout">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainTopBarView">
        <com.example.ikefluxa.stufflogger.UsersListView
            android:id="@+id/usersListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

    <com.example.ikefluxa.stufflogger.MainTopBarShadowView
        android:id="@+id/mainTopBarShadowView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.ikefluxa.stufflogger.MainTopBarView
        android:id="@+id/mainTopBarView"
        android:layout_width="320dp"
        android:layout_height="50.5dp" />
</RelativeLayout>
