<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuff.log.ger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:fullBackupContent="false">
        <activity android:name="com.stuff.log.ger.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.stuff.log.ger.LogActivity" />
        <activity android:name="com.stuff.log.ger.UserActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name="com.stuff.log.ger.NewLogLineActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name="com.stuff.log.ger.ConfirmUserDeleteActivity"
            android:theme="@style/AppTheme.PopupTheme">
        </activity>
    </application>
</manifest>